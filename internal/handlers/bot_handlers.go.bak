func (h *BotHandler) showServerStats(chatID int64) {
	// –ü–æ–ª—É—á–∞–µ–º —Å–ø–∏—Å–æ–∫ —Å–µ—Ä–≤–µ—Ä–æ–≤
	servers, err := h.db.GetAllServers()
